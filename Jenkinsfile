pipeline {
   agent any
   
    environment {
       SCANNER_HOME = tool 'sqs'
       dockerImage=""
       repository="samcelis/doot"
       dhCredential="dockerhub"
    }
    stages {
       
     stage('Test') {
            steps {
             echo "â–›â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â– â–œ"
             echo "                    âˆ™âˆ™Â·â–«â–«áµ’á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼ ğ—§ğ—²ğ˜€ğ˜ á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼áµ’â–«â–«Â·âˆ™âˆ™"
             echo "â–™ â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â–Ÿ"
               withMaven(maven:'maven-latest') {
                   script{
                       try{
                           sh '''
                            cd cidr_convert_api 
                            cd java
                            cd cidr-api 
                            echo "ã€ï¼´ï½…ï½“ï½”ã€‘"
                            mvn test
                            pwd
                            '''
                       }catch (Exception e) {
                    echo 'Error happened in testing. ERROR: ' + e.toString()
                    }
                   }
                   
               }
            }
        }
       
       
        stage('Build') {
           
            steps {
                echo "â–›â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â– â–œ"
                echo "                    âˆ™âˆ™Â·â–«â–«áµ’á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼ ğ’ƒğ’–ğ’Šğ’ğ’… á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼áµ’â–«â–«Â·âˆ™âˆ™"
                echo "â–™ â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â–Ÿ"
                sh ''' chmod +x cidr_convert_api/java/build.sh '''

               withMaven(maven:'maven-latest') {
                sh '''cidr_convert_api/java/build.sh '''
                }
            }
        }

         
       
       
        stage("SonarQube analysis") {
            steps {
               echo "â–›â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â– â–œ"
                echo "                    âˆ™âˆ™Â·â–«â–«áµ’á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼ ğ‘ºğ’„ğ’‚ğ’ğ’ğ’†ğ’“ á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼áµ’â–«â–«Â·âˆ™âˆ™"
                echo "â–™ â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â–Ÿ"
               withSonarQubeEnv('sq1'){
               withMaven(maven:'maven-latest') {
                   sh '''
                   cd cidr_convert_api 
                   cd java
                   cd cidr-api 
                   mvn  org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=ureshiichan_DOTT
                   '''
                }
               }
             }
          }
 
         


        stage('Build docker image') {
             steps {
                 echo "â–›â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â– â–œ"
                echo "              âˆ™âˆ™Â·â–«â–«áµ’á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼ ğ”¹ğ•¦ğ•ğ••ğ•šğ•Ÿğ•˜ ğ••ğ• ğ•”ğ•œğ•–ğ•£ ğ•šğ•ğ•’ğ•˜ğ•– á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼áµ’â–«â–«Â·âˆ™âˆ™"
                echo "â–™ â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â–Ÿ"
                    script{
                           dockerImage = docker.build("${repository}","./cidr_convert_api/java/ ")
                        }
                    }
                }

              

        stage('Upload image') {
            steps {
                echo "â–›â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â– â–œ"
                echo "       âˆ™âˆ™Â·â–«â–«áµ’á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼ ğ‘¼ğ’‘ğ’ğ’ğ’‚ğ’…ğ’Šğ’ğ’ˆ ğ’Šğ’ğ’‚ğ’ˆğ’† ğ’•ğ’ ğ’…ğ’ğ’„ğ’Œğ’†ğ’“ğ’‰ğ’–ğ’ƒ á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼áµ’â–«â–«Â·âˆ™âˆ™"
                echo "â–™ â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â–Ÿ"
                script{
                    docker.withRegistry('',dhCredential){
                        dockerImage.push()
                    }
                }
            }
        }

        stage('Remove old container') {
        steps{
                echo "â–›â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â– â–œ"
                echo "     âˆ™âˆ™Â·â–«â–«áµ’á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼ ğ”¹ğ‘ğğ¦ğ¨ğ¯ğ ğ¨ğ¥ğ ğœğ¨ğ§ğ­ğšğ¢ğ§ğğ« á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼áµ’â–«â–«Â·âˆ™âˆ™"
                echo "â–™ â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â–Ÿ"
            script {
                try{
                    sh 'docker rm -f api'
                }catch(Exception e){
                    echo e.toString()
                }
            }
        }
    }

        stage('Run Docker container') {
        steps{
                echo "â–›â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â– â–œ"
                echo "              âˆ™âˆ™Â·â–«â–«áµ’á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼ ğ‘ğ®ğ§ ğƒğ¨ğœğ¤ğğ« ğœğ¨ğ§ğ­ğšğ¢ğ§ğğ« á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼áµ’â–«â–«Â·âˆ™âˆ™"
                echo "â–™ â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â–Ÿ"
            script {
                sh 'docker images'
                dockerImage.run("-ti -p 8000:8000  --name api")
            }
        }
    }

       stage('Remove dangling image') {
        steps{
                echo "â–›â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â–â– â–œ"
                echo "          âˆ™âˆ™Â·â–«â–«áµ’á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼ ğ‘ğğ¦ğ¨ğ¯ğ ğğšğ§ğ ğ¥ğ¢ğ§ğ  ğ¢ğ¦ğšğ ğ á´¼áµ’â–«â‚’â‚’â–«áµ’á´¼áµ’â–«â–«Â·âˆ™âˆ™"
                echo "â–™ â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â––â–Ÿ"
            script {
                sh 'docker image prune -f'
                
            }
        }
    }


    }
}
